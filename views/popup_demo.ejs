<!-- Custom JS -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Добавляем эффект наведения
  var popupItems = document.querySelectorAll('.popup-item');
  popupItems.forEach(function(item) {
    item.addEventListener('mouseenter', function() {
      this.style.backgroundColor = 'rgba(255, 255, 255, 0.05)';
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.backgroundColor = 'transparent';
    });
    
    item.addEventListener('click', function() {
      var title = this.querySelector('.popup-title').textContent;
      console.log('Clicked on:', title);
    });
  });
  
  // Центрирование хвостика над модалками
  $('#modalServices, #modalClients').on('shown.bs.modal', function () {
    var modalWidth = $('.modal-content', this).width();
    $('.triangle-pointer', this).css('left', (modalWidth / 2) - 15 + 'px');
  });
});
</script>
